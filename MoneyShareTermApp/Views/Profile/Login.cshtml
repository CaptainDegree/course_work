@model MoneyShareTermApp.ViewModels.LoginViewModel
@{ Layout = "_Enter"; }

@{
    ViewData["Title"] = "Login";
}

<div class="login">
    <h2>Вход на сайт</h2>
    <form asp-controller="Profile" asp-action="Login" asp-antiforgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="email" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input type="password" asp-for="Password"  class="form-control" placeholder="password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input asp-action="Login" type="submit" class="btn btn-primary" value="Войти" />
            </div>
        </div>
    </form>
</div>