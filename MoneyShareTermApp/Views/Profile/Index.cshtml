            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hidden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentPrice.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mailer.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessagePrice.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionPrice.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
